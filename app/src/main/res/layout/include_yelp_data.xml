<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="yelpData"
            type="com.janeullah.apps.healthinspectionviewer.dtos.FlattenedYelpData" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/yelpStarsDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@{String.valueOf(yelpData.rating)}"
            android:src="@drawable/stars_large_5" />
        <!--imageResource="@{yelpData.yelpStarsResourceId}" />-->

        <ImageView
            android:id="@+id/yelpLogoDisplay"
            android:layout_width="64dp"
            android:layout_height="31dp"
            android:layout_toRightOf="@+id/yelpStarsDisplay"
            android:src="@drawable/Yelp_trademark_RGB"
            android:contentDescription="@string/yelp_logo_desc"/>

    </RelativeLayout>
</layout>